
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	# SSL configuration
	#
	# listen 443 ssl default_server;
	# listen [::]:443 ssl default_server;
	#
	# Note: You should disable gzip for SSL traffic.
	# See: https://bugs.debian.org/773332
	#
	# Read up on ssl_ciphers to ensure a secure configuration.
	# See: https://bugs.debian.org/765782
	#
	# Self signed certs generated by the ssl-cert package
	# Don't use them in a production server!
	#
	# include snippets/snakeoil.conf;

	root /data/www/makerkinggame.com;

	# Add index.php to the list if you are using PHP
	index index.html index.htm;

	server_name 127.0.0.1;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ /index.html =404;
	}

	location /api/ {
		proxy_pass http://[::1]:8000/;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
                proxy_set_header Host $host;
                proxy_hide_header X-Powered-By;
                proxy_cache_bypass $http_upgrade;
	}
}

server {

	# SSL configuration
	#
	# listen 443 ssl default_server;
	# listen [::]:443 ssl default_server;
	#
	# Note: You should disable gzip for SSL traffic.
	# See: https://bugs.debian.org/773332
	#
	# Read up on ssl_ciphers to ensure a secure configuration.
	# See: https://bugs.debian.org/765782
	#
	# Self signed certs generated by the ssl-cert package
	# Don't use them in a production server!
	#
	# include snippets/snakeoil.conf;

	root /data/www/makerkinggame.com;

	# Add index.php to the list if you are using PHP
	index index.html index.htm;
    server_name makerkinggame.com www.makerkinggame.com; # managed by Certbot


	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ /index.html =404;
	}

	location /api/ {
		proxy_pass http://[::1]:8000/;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
                proxy_set_header Host $host;
                proxy_hide_header X-Powered-By;
                proxy_cache_bypass $http_upgrade;	
	}


    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/jumpai.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/jumpai.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot







}
server {
    if ($host = www.makerkinggame.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
	

    if ($host = makerkinggame.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

	listen 80 ;
	listen [::]:80 ;
    server_name makerkinggame.com www.makerkinggame.com;
    return 404; # managed by Certbot
}

server {
	
    listen 443 ssl;
    listen [::]:443 ssl;
    ssl_certificate /etc/letsencrypt/live/jumpai.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/jumpai.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    server_name jumpai.net www.jumpai.net;
    return 308 https://makerkinggame.com$request_uri;


}


server {
    if ($host = www.jumpai.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = jumpai.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    listen [::]:80;

    server_name jumpai.net www.jumpai.net;
    return 404; # managed by Certbot




}